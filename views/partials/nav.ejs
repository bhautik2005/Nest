<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Airbnb Navbar</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

    body {
      font-family: 'Inter', sans-serif;
    }

    .glass-nav {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .nav-link {
      position: relative;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .nav-link:before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.2), transparent);
      transition: left 0.5s;
    }

    .nav-link:hover:before {
      left: 100%;
    }

    .nav-link:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    .btn-gradient {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .btn-gradient:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
    }

    .btn-gradient:before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s;
    }

    .btn-gradient:hover:before {
      left: 100%;
    }

    .slide-in {
      animation: slideIn 0.6s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }

      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .brand-logo {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-weight: 700;
      font-size: 1.5rem;
    }
  </style>
</head>

<body class="min-h-screen overflow-x-hidden">

  <!-- Navbar -->
  <nav class="glass-nav sticky top-0 z-50 shadow-lg">
    <div class="max-w-7xl mx-auto px-6 py-4">
      <div class="flex items-center justify-between">

        <!-- Brand Logo -->
        <div class="slide-in">
          <a href="/" class="brand-logo flex items-center space-x-2 nav-link px-4 py-2 rounded-xl">
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
            </svg>
            <span>NEST</span>
          </a>
        </div>

        <!-- Center Navigation Links -->
        <% if(isLoggedIn){ %>
          <div class="hidden md:flex items-center space-x-2 slide-in" style="animation-delay: 0.1s;">

            <% if(user && user.userType==="guest" ){%>
              <a href="/homelist" class="nav-link
          <%= currentPage === 'homelist' ? 'btn-gradient  text-white' : '  hover:text-purple-600' %>
          text-gray-700 px-4 py-2 rounded-xl font-medium">
                üè† Home List
              </a>
              <a href="/booking" class="nav-link
          <%= currentPage === 'booking' ? 'btn-gradient  text-white' : '  hover:text-purple-600' %>
          text-gray-700 px-4 py-2 rounded-xl font-medium">
                üìÖ Booking
              </a>
              <a href="/favourite" class="nav-link
          <%= currentPage === 'favourite' ? 'btn-gradient  text-white' : '  hover:text-purple-600' %>
          text-gray-700 px-4 py-2 rounded-xl font-medium">
                ‚ù§Ô∏è Favourite
              </a>
              <%}else{%>
                <a href="/host/add-home" class="nav-link
          <%= currentPage === 'homeadd' ? 'btn-gradient  text-white' : '  hover:text-purple-600' %>
          text-gray-700 px-4 py-2 rounded-xl font-medium">
                  ‚ûï Add Home
                </a>
                <a href="/host/host-home" class="nav-link
          <%= currentPage === 'host-home' ? 'btn-gradient  text-white' : '  hover:text-purple-600' %>
          text-gray-700 px-4 py-2 rounded-xl font-medium">
                  üè° Host Home
                </a>
                <%}%>
          </div>
          <% } %>

            <!-- Right Side Auth -->
            <div class="flex items-center space-x-3 slide-in" style="animation-delay: 0.2s;">
              <% if (!isLoggedIn) { %>
                <!-- Not logged in: show Sign Up / Login -->
                <a href="/singup"
                  class="nav-link text-purple-600 hover:text-purple-800 px-4 py-2 rounded-xl font-medium border border-purple-600 hover:bg-purple-50">
                  Sign Up
                </a>
                <a href="/login" class="btn-gradient text-white px-6 py-2 rounded-xl font-medium">
                  Login
                </a>
                <% } else { %>
                  <!-- Logged in: show user button (avatar + name) -->
                  <button id="userMenuButton"
                    class="flex items-center space-x-2 px-3 py-2 rounded-full bg-purple-100 hover:bg-purple-200 transition-all duration-200 hover:shadow-md group">
                    <!-- Avatar circle with first letter of name -->
                    <div
                      class="w-9 h-9 rounded-full bg-gradient-to-r from-purple-600 to-purple-700 text-white flex items-center justify-center uppercase font-semibold shadow-sm group-hover:scale-105 transition-transform duration-200">
                      <%= (user.firstName && user.firstName[0]) || user.email[0] %>
                    </div>
                    <span class="font-medium text-gray-800 group-hover:text-purple-800 transition-colors">
                      <%= user.firstName %>
                    </span>
                  </button>
                  <% } %>
            </div>

      </div>
    </div>
  </nav>

  <!-- ============== USER PANEL + OVERLAY (outside nav) ============== -->
  <% if (isLoggedIn) { %>
    <!-- Dark overlay behind the user panel -->
    <div id="userPanelOverlay" class="fixed inset-0 bg-black/40 backdrop-blur-sm z-40 hidden"></div>

    <!-- Slide-over User Panel -->
    <div id="userPanel"
      class="fixed right-0 top-0 h-screen w-80 max-w-full bg-white/95 backdrop-blur-xl shadow-2xl border-l-2 border-purple-100 transform translate-x-full transition-transform duration-300 ease-out z-50 rounded-l-3xl flex flex-col">

      <!-- Header with avatar + name -->
      <div
        class="p-6 border-b border-purple-50 flex items-center space-x-4 bg-gradient-to-r from-purple-50 to-indigo-50 rounded-tl-3xl">
        <div
          class="w-14 h-14 rounded-2xl bg-gradient-to-r from-purple-600 to-purple-700 text-white flex items-center justify-center text-xl uppercase font-bold shadow-lg ring-2 ring-white/50">
          <%= (user.firstName && user.firstName[0]) || user.email[0] %>
        </div>
        <div class="min-w-0 flex-1">
          <p class="font-bold text-xl text-gray-900 truncate leading-tight">
            <%= user.firstName %>
              <%= user.lastName || '' %>
          </p>
          <p class="text-sm text-purple-600 font-medium bg-purple-50 px-2 py-1 rounded-full inline-block mt-1">
            <%= user.email %>
          </p>
        </div>
        <!-- Close button -->
        <button id="closePanelBtn" class="p-2 hover:bg-purple-100 rounded-xl transition-colors ml-auto -mr-2">
          <svg class="w-6 h-6 text-gray-500 hover:text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Scrollable Body (panel scroll only) -->
      <div class="flex-1 overflow-y-auto p-6 space-y-6">
        <!-- Profile summary -->
        <div class="space-y-2">
          <p class="text-xs font-medium text-purple-600 uppercase tracking-wide">Account</p>
          <div class="flex items-center justify-between p-3 bg-purple-50/50 rounded-2xl border border-purple-100">
            <div>
              <p class="font-semibold text-gray-900 text-lg">
                <%=user.userType%>
              </p>
              <p class="text-sm text-gray-500">Member</p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7">
                </path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Quick actions -->
        <div class="space-y-2">
          <p class="text-xs font-medium text-purple-600 uppercase tracking-wide">Quick Actions</p>
          <div class="grid gap-2">
            <a href="/profile"
              class="flex items-center space-x-3 p-3 hover:bg-purple-50 rounded-xl transition-all duration-200 group">
              <div
                class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center group-hover:bg-purple-200 transition-colors">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <span class="font-medium text-gray-800 group-hover:text-purple-700">Profile</span>
            </a>
            <a href="/settings"
              class="flex items-center space-x-3 p-3 hover:bg-purple-50 rounded-xl transition-all duration-200 group">
              <div
                class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z">
                  </path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <span class="font-medium text-gray-800 group-hover:text-blue-700">Settings</span>
            </a>
          </div>
        </div>

        <!-- Logout button -->
        <form action="/logout" method="post" class="pt-4 border-t border-purple-100 pb-8">
          <button type="submit"
            class="w-full bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white px-6 py-3 rounded-2xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
              </path>
            </svg>
            <span>Logout</span>
          </button>
        </form>
      </div>
    </div>
    <% } %>

      <!-- ============== SCRIPT ============== -->
      <script>
        const userBtn = document.getElementById('userMenuButton');
        const userPanel = document.getElementById('userPanel');
        const overlay = document.getElementById('userPanelOverlay');
        const closeBtn = document.getElementById('closePanelBtn');

        function openUserPanel() {
          if (!userPanel || !overlay) return;
          userPanel.classList.remove('translate-x-full');   // slide in
          overlay.classList.remove('hidden');               // show overlay
          document.body.classList.add('overflow-hidden');   // lock page scroll (no double scrollbar)
        }

        function closeUserPanel() {
          if (!userPanel || !overlay) return;
          userPanel.classList.add('translate-x-full');      // slide out
          overlay.classList.add('hidden');                  // hide overlay
          document.body.classList.remove('overflow-hidden');// unlock page scroll
        }

        if (userBtn && userPanel && overlay) {
          userBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            if (userPanel.classList.contains('translate-x-full')) {
              openUserPanel();
            } else {
              closeUserPanel();
            }
          });
        }

        if (closeBtn) {
          closeBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            closeUserPanel();
          });
        }

        if (overlay) {
          overlay.addEventListener('click', closeUserPanel);
        }

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && userPanel && !userPanel.classList.contains('translate-x-full')) {
            closeUserPanel();
          }
        });
      </script>

</body>

</html>